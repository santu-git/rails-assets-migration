<%= form_for(post,html: { multipart: true }) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.cktext_area :description, ckeditor: { toolbar: 'mini',language: 'us'} %>
  </div>
  <div class="field">
    <%= f.label :featured_image %>
    <%= f.file_field :featured_image, as: :file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
