<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Featured</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.featured_image.url(:medium) %></td>
        <td><%= post.title %></td>
        <td><%= post.description.html_safe %></td>
        <td><%= link_to 'Show', [@organization,post]%> </td>
        <td><%= link_to 'Edit', edit_organization_post_path(@organization,post) %></td>
        <td><%= link_to 'Destroy', [@organization,post], method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_organization_post_path(@organization) %>
